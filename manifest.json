{
    "manifest_version": 2,
    "name": "Datextime",
    "short_name": "datextime",
    "version": "1.0",
    "description": "Extracts dates and times from the webpages",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "message.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "status.js",
                "message.js",
                "ner.js",
                "content-script.js"
            ],
            "css": [
                "highlight.css"
            ]
        }
    ]
}
